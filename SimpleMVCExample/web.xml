<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
  <display-name>SER422 Simple MVC</display-name>
  <description>Simple MVC Example</description>
  
  <servlet>
    <servlet-name>Controller</servlet-name>
    <servlet-class>edu.asupoly.ser422.simplemvcex.ControllerServlet</servlet-class>
    <init-param>
    	<param-name>surveyanswers</param-name>
    	<param-value>surveyanswers.ser</param-value>
  	</init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>Controller</servlet-name>
    <url-pattern>/controller/*</url-pattern>
  </servlet-mapping>

</web-app>