<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <servlet>
    <servlet-name>SampleDSServlet</servlet-name>
    <servlet-class>edu.asupoly.cst533.jdbcex.SampleDSServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>SampleDSServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
	 <resource-ref>
	  <description>
		Resource reference to a factory for java.sql.Connection
		instances that may be used for talking to a particular
		database that is configured in the META-INF/context.xml file.
	  </description>
	  <res-ref-name>jdbc/cst533DemoDB-pool2</res-ref-name>
	  <res-type>javax.sql.DataSource</res-type>
	  <res-auth>Container</res-auth>
	</resource-ref>
</web-app>
